@inherits LayoutComponentBase

<div class="min-h-screen flex flex-col">
  <header class="sticky top-0 z-20 bg-white/90 backdrop-blur border-b border-slate-200">
    <div class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
      <div>
        <div class="text-2xl font-extrabold text-brand-600">
          DomainAskFor
        </div>
        <p class="text-sm text-slate-500">Find available domains with AI-powered suggestions</p>
      </div>
      <div class="flex items-center gap-3">
        <AuthorizeView>
          <Authorized>
            <a href="/dashboard"
              class="inline-flex items-center gap-2 px-3 py-2 text-sm font-semibold text-brand-600 bg-brand-50 border border-brand-200 rounded-lg hover:bg-brand-100 transition">
              <span class="oi oi-dashboard"></span>
              <span>Dashboard</span>
            </a>
            <span class="text-slate-700 font-semibold">@context.User.Identity.Name</span>
            <a href="/logout"
              class="inline-flex items-center px-3 py-2 text-sm font-semibold text-slate-700 border border-slate-200 rounded-lg hover:bg-slate-100 transition">Logout</a>
          </Authorized>
          <NotAuthorized>
            <a href="/login"
              class="inline-flex items-center px-3 py-2 text-sm font-semibold text-brand-600 border border-brand-200 rounded-lg bg-white hover:bg-brand-50 transition">Login</a>
            <a href="/register" class="inline-flex items-center px-3 py-2 text-sm font-semibold text-white rounded-lg"
              style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">Get Started</a>
          </NotAuthorized>
        </AuthorizeView>
      </div>
    </div>
  </header>

  <main class="flex-1">
    <div class="max-w-6xl mx-auto px-4 py-8">
      @Body
    </div>
  </main>
</div>