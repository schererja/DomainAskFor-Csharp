@page "/register"
@using DomainAskFor.Models
@using DomainAskFor.Client.Services
@inject IAuthService AuthService
@inject NavigationManager NavigationManager

<section class="max-w-md mx-auto">
  <div class="bg-white/95 backdrop-blur rounded-2xl shadow-2xl border border-white/60 p-6 md:p-8 mt-6">
    <div class="mb-6 text-center">
      <h3 class="text-2xl font-extrabold text-slate-800">Create an account</h3>
      <p class="text-sm text-slate-500">Start saving your searches and get back to them anytime.</p>
    </div>

    <EditForm Model="@registerRequest" OnValidSubmit="@HandleRegister">
      <DataAnnotationsValidator />
      <ValidationSummary />

      <div class="space-y-4">
        <div class="space-y-2">
          <label for="firstName" class="text-sm font-semibold text-slate-700">First Name</label>
          <InputText id="firstName"
            class="w-full rounded-xl border border-slate-200 px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-brand-500 bg-white/80"
            @bind-Value="registerRequest.FirstName" placeholder="John" />
        </div>

        <div class="space-y-2">
          <label for="lastName" class="text-sm font-semibold text-slate-700">Last Name</label>
          <InputText id="lastName"
            class="w-full rounded-xl border border-slate-200 px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-brand-500 bg-white/80"
            @bind-Value="registerRequest.LastName" placeholder="Doe" />
        </div>

        <div class="space-y-2">
          <label for="email" class="text-sm font-semibold text-slate-700">Email *</label>
          <InputText id="email"
            class="w-full rounded-xl border border-slate-200 px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-brand-500 bg-white/80"
            @bind-Value="registerRequest.Email" placeholder="you@example.com" />
        </div>

        <div class="space-y-2">
          <label for="password" class="text-sm font-semibold text-slate-700">Password *</label>
          <InputText id="password" type="password"
            class="w-full rounded-xl border border-slate-200 px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-brand-500 bg-white/80"
            @bind-Value="registerRequest.Password" placeholder="Minimum 6 characters" />
        </div>

        <div class="space-y-2">
          <label for="confirmPassword" class="text-sm font-semibold text-slate-700">Confirm Password *</label>
          <InputText id="confirmPassword" type="password"
            class="w-full rounded-xl border border-slate-200 px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-brand-500 bg-white/80"
            @bind-Value="registerRequest.ConfirmPassword" placeholder="Re-enter password" />
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
          <div class="rounded-xl border border-rose-200 bg-rose-50 text-rose-700 px-4 py-3 font-semibold">
            @errorMessage
          </div>
        }

        <button type="submit"
          class="w-full inline-flex items-center justify-center px-5 py-3 rounded-xl font-semibold text-white shadow-lg shadow-brand-500/30 disabled:opacity-60 disabled:cursor-not-allowed"
          style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);" disabled="@isLoading">
          @if (isLoading)
          {
            <span>Creating account...</span>
          }
          else
          {
            <span>Register</span>
          }
        </button>
      </div>
    </EditForm>

    <div class="mt-4 text-center text-sm text-slate-600">
      <p>Already have an account? <a class="text-brand-600 hover:text-brand-700 font-semibold" href="/login">Login
          here</a></p>
    </div>
  </div>
</section>

@code {
  private RegisterRequest registerRequest = new RegisterRequest();
  private bool isLoading = false;
  private string errorMessage = "";

  private async Task HandleRegister()
  {
    isLoading = true;
    errorMessage = "";

    try
    {
      var result = await AuthService.Register(registerRequest);
      if (result.Success)
      {
        NavigationManager.NavigateTo("/dashboard");
      }
      else
      {
        errorMessage = result.ErrorMessage ?? "Registration failed. Please try again.";
      }
    }
    catch (Exception ex)
    {
      errorMessage = $"An error occurred: {ex.Message}";
    }
    finally
    {
      isLoading = false;
    }
  }
}