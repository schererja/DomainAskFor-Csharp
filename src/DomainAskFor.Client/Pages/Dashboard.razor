@page "/dashboard"
@using DomainAskFor.Models
@using DomainAskFor.Client.Services
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize]
@inject ISearchHistoryService SearchHistoryService
@inject IAuthService AuthService
@inject NavigationManager NavigationManager

<div class="space-y-6">
  <div class="rounded-2xl bg-gradient-to-r from-brand-500 to-purple-600 text-white shadow-2xl p-6 md:p-8">
    <div class="flex flex-wrap items-center justify-between gap-4">
      <div>
        <h2 class="text-2xl font-extrabold mb-1">My Dashboard</h2>
        <AuthorizeView>
          <Authorized>
            <p class="text-white/90">Welcome back, <strong>@context.User.Identity.Name</strong></p>
          </Authorized>
        </AuthorizeView>
      </div>
      <a href="/"
        class="inline-flex items-center px-4 py-2.5 rounded-xl font-semibold text-slate-800 bg-white/90 hover:bg-white shadow-lg">
        New Search
      </a>
    </div>
  </div>

  <div class="bg-white/95 backdrop-blur rounded-2xl shadow-xl border border-white/60">
    <div class="flex items-center justify-between px-6 py-4 border-b border-slate-100">
      <h4 class="text-lg font-bold text-slate-800">Search History</h4>
      <button
        class="inline-flex items-center px-3 py-2 text-sm font-semibold text-brand-600 border border-brand-200 rounded-lg hover:bg-brand-50 transition"
        @onclick="LoadSearchHistory">Refresh</button>
    </div>
    <div class="p-6">
      @if (isLoading)
      {
        <div class="text-center py-6 text-slate-600">Loading search history...</div>
      }
      else if (searchHistory == null || !searchHistory.Any())
      {
        <div class="text-center py-6 text-slate-500">No searches yet. <a class="text-brand-600 font-semibold"
            href="/">Start searching</a> to see your history here.</div>
      }
      else
      {
        <div class="overflow-hidden rounded-xl border border-slate-100 shadow-sm">
          <table class="min-w-full divide-y divide-slate-200">
            <thead class="bg-slate-50">
              <tr class="text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
                <th class="px-4 py-3">Date</th>
                <th class="px-4 py-3">Search Term</th>
                <th class="px-4 py-3">TLD</th>
                <th class="px-4 py-3">Results</th>
                <th class="px-4 py-3">Available Domains</th>
                <th class="px-4 py-3">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-100 bg-white">
              @foreach (var search in searchHistory.OrderByDescending(s => s.SearchedAt))
              {
                var availableCount = search.Results?.Count(r => r.IsAvailable) ?? 0;
                <tr class="hover:bg-slate-50 transition">
                  <td class="px-4 py-3 text-sm text-slate-700">@search.SearchedAt.ToString("MMM dd, yyyy HH:mm")</td>
                  <td class="px-4 py-3 text-sm text-slate-800 space-x-1">
                    @if (!string.IsNullOrEmpty(search.Prefix))
                    {
                      <span
                        class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-slate-100 text-slate-600">@search.Prefix</span>
                    }
                    <span class="font-semibold">@search.SearchTerm</span>
                    @if (!string.IsNullOrEmpty(search.Suffix))
                    {
                      <span
                        class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-slate-100 text-slate-600">@search.Suffix</span>
                    }
                  </td>
                  <td class="px-4 py-3 text-sm">
                    <span
                      class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-brand-50 text-brand-700 border border-brand-100">.@search.TLD</span>
                  </td>
                  <td class="px-4 py-3 text-sm text-slate-700">@search.Results?.Count ?? 0</td>
                  <td class="px-4 py-3 text-sm">
                    <span
                      class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold @(availableCount > 0 ? "bg-emerald-100 text-emerald-700" : "bg-slate-100 text-slate-600")">@availableCount
                      available</span>
                  </td>
                  <td class="px-4 py-3 text-sm">
                    <div class="flex flex-wrap gap-2">
                      <button
                        class="inline-flex items-center px-3 py-2 text-sm font-semibold text-brand-600 border border-brand-200 rounded-lg hover:bg-brand-50 transition"
                        @onclick="() => ViewSearchDetails(search)">View</button>
                      <button
                        class="inline-flex items-center px-3 py-2 text-sm font-semibold text-rose-600 border border-rose-200 rounded-lg hover:bg-rose-50 transition"
                        @onclick="() => DeleteSearch(search.Id)">Delete</button>
                    </div>
                  </td>
                </tr>
              }
            </tbody>
          </table>
        </div>
      }
    </div>
  </div>

  @if (selectedSearch != null)
  {
    <div class="fixed inset-0 z-30 flex items-center justify-center bg-slate-900/60 backdrop-blur-sm px-4">
      <div class="w-full max-w-3xl bg-white rounded-2xl shadow-2xl overflow-hidden">
        <div
          class="flex items-center justify-between px-6 py-4 border-b border-slate-100 bg-gradient-to-r from-brand-500 to-purple-600 text-white">
          <h5 class="text-lg font-bold">Search Results Details</h5>
          <button type="button" class="text-white/90 hover:text-white" @onclick="CloseModal">✕</button>
        </div>
        <div class="p-6 space-y-2">
          <p class="text-slate-700"><strong>Search Term:</strong>
            @selectedSearch.Prefix@selectedSearch.SearchTerm@selectedSearch.Suffix</p>
          <p class="text-slate-700"><strong>Date:</strong> @selectedSearch.SearchedAt.ToString("MMMM dd, yyyy HH:mm")</p>
          <p class="text-slate-700"><strong>TLD:</strong> .@selectedSearch.TLD</p>

          <h6 class="mt-4 text-sm font-semibold text-slate-600">Results:</h6>
          @if (selectedSearch.Results != null && selectedSearch.Results.Any())
          {
            <div class="space-y-2">
              @foreach (var result in selectedSearch.Results)
              {
                <div class="flex items-center justify-between px-4 py-3 rounded-xl border border-slate-200 bg-slate-50">
                  <span class="font-semibold text-slate-800">@result.DomainName</span>
                  @if (result.IsAvailable)
                  {
                    <span
                      class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-emerald-100 text-emerald-700">✓
                      Available</span>
                  }
                  else
                  {
                    <span
                      class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-rose-100 text-rose-700">✗
                      Taken</span>
                  }
                </div>
              }
            </div>
          }
        </div>
        <div class="px-6 py-4 border-t border-slate-100 flex justify-end">
          <button type="button"
            class="inline-flex items-center px-4 py-2 rounded-lg font-semibold text-slate-700 bg-slate-100 hover:bg-slate-200"
            @onclick="CloseModal">Close</button>
        </div>
      </div>
    </div>
  }
</div>

@code {
  private List<SearchHistoryModel> searchHistory = new List<SearchHistoryModel>();
  private SearchHistoryModel selectedSearch = null;
  private bool isLoading = true;

  protected override async Task OnInitializedAsync()
  {
    await LoadSearchHistory();
  }

  private async Task LoadSearchHistory()
  {
    isLoading = true;
    searchHistory = await SearchHistoryService.GetSearchHistory();
    isLoading = false;
  }

  private async Task DeleteSearch(int searchId)
  {
    var success = await SearchHistoryService.DeleteSearch(searchId);
    if (success)
    {
      await LoadSearchHistory();
    }
  }

  private void ViewSearchDetails(SearchHistoryModel search)
  {
    selectedSearch = search;
  }

  private void CloseModal()
  {
    selectedSearch = null;
  }

  private async Task HandleLogout()
  {
    await AuthService.Logout();
    NavigationManager.NavigateTo("/");
  }
}